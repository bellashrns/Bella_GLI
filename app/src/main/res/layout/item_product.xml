<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">

    <TextView android:id="@+id/product_name_lv" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="20sp" android:text="@string/login"
        android:layout_marginEnd="30dp" />

    <TextView android:id="@+id/product_stock_lv" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="20sp" android:text="@string/login" />

    <TextView android:id="@+id/product_price_lv" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="20sp" android:text="@string/login"
        android:layout_marginStart="30dp" />
</LinearLayout>